<p id="notice"><%= notice %></p>

<h1 align="center">Places</h1>
<div align="right" style="margin-bottom: 20px;">
  <%= link_to 'New Place', new_place_path, :class => "btn btn-primary" %>
</div>
<div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Place type</th>
        <th>Location</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>State</th>
        <th>City</th>
        <th>Country</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% if @places.present? %>
        <% @places.each do |place| %>
          <tr>
            <td><%= place.name %></td>
            <td><%= place.place_type %></td>
            <td><%= place.address %></td>
            <td><%= place.latitude %></td>
            <td><%= place.longitude %></td>
            <td><%= place.state.name %></td>
            <td><%= place.city.name %></td>
            <td><%= place.country.name %></td>
            <td><%= link_to 'Show', place %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="11">
            <span align="center">No Data Found</span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
